        <ComboBox x:Name="cboEstado" HorizontalAlignment="Left" Margin="122,76,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox x:Name="txtEnumeracion" HorizontalAlignment="Left" Margin="122,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <ComboBox x:Name="cboTipoHabitacion" HorizontalAlignment="Left" Margin="122,164,0,0" VerticalAlignment="Top" Width="131"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="122,225,0,0" VerticalAlignment="Top" Click="btnAgregar_Click"/>
        <Button x:Name="btnActualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="197,225,0,0" VerticalAlignment="Top" Click="btnActualizar_Click"/>
        <Label Content="Estado" HorizontalAlignment="Left" Margin="60,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Enumeracion" HorizontalAlignment="Left" Margin="27,115,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
