<Window x:Class="HotelManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="331">
    <Grid >
        <Label Content="Usuario" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Center" Margin="0,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.386"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Contraseña" HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" Width="222"/>
        <Button x:Name="btnLogin" Content="Inicio Sesion" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>

    </Grid>
</Window>
